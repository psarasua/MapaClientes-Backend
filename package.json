{
  "name": "mapas-clientes-backend",
  "version": "1.0.0",
  "description": "Backend API simple para Mapas Clientes",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "build": "npm install",
    "dev": "netlify dev",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "pre-commit": "npm run lint:check",
    "validate": "npm run lint:check && echo '✅ Código validado correctamente'",
    "seed": "node seeders/index.js",
    "seed:camiones": "node seeders/camionesSeeder.js",
    "seed:dias": "node seeders/diasEntregaSeeder.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/node": "^24.0.14",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "prisma": "^6.12.0",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "netlify-cli": "^22.2.2"
  }
}
